= form_for(@menu_item) do |f|
  - if @menu_item.errors.any?
    #error_explanation
      %h2= pluralize(@menu_item.errors.count, "error") + " prohibited this menu item from being saved"
      %ul
        - @menu_item.errors.full_messages.each do |msg|
          %li= msg 
  = f.text_field :name
  = f.text_field :price
  .actions
    = f.submit